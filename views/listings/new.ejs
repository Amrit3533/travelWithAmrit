<% layout("/layouts/boilerplate") %>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-8 offset-md-2">
      <h3 class="mt-1 text-center">List New Hotel</h3>
      <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">

        <!-- Title Field -->
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input class="form-control" type="text" name="listing[title]" placeholder="Enter Title" required />
          <div class="valid-feedback">Title looks good!</div>
          <div class="invalid-feedback">Please Enter Title</div>
        </div>

        <!-- Location Field -->
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input class="form-control" type="text" name="listing[location]" placeholder="Enter Location" required />
          <div class="invalid-feedback">Please Enter Location</div>
        </div>

        <!-- Image and Category Fields (Responsive Grid) -->
        <div class="row">
          <div class="col-12 col-md-6 mb-3">
            <label for="image" class="form-label">Image</label>
            <input type="file" name="listing[image]" class="form-control" required />
            <div class="invalid-feedback">Upload Image</div>
          </div>

          <div class="col-12 col-md-6 mb-3">
            <label for="category" class="form-label">Hotel Category</label>
            <select class="form-select" id="type" name="listing[category]" required>
              <option selected disabled>Select Category</option>
              <option value="mountains">Mountains</option>
              <option value="arctic">Arctic</option>
              <option value="camping">Camping</option>
              <option value="trending">Trending</option>
              <option value="rooms">Rooms</option>
              <option value="iconic_Cities">Iconic Cities</option>
              <option value="castles">Castles</option>
              <option value="pools">Pools</option>
              <option value="farms">Farms</option>
            </select>
            <div class="invalid-feedback">Please Select a Category</div>
          </div>
        </div>

        <!-- Price and Country Fields (Responsive Grid) -->
        <div class="row">
          <div class="col-12 col-md-6 mb-3">
            <label for="price" class="form-label">Price</label>
            <input class="form-control" type="number" name="listing[price]" placeholder="Enter Price" required />
            <div class="invalid-feedback">Please Enter Price</div>
          </div>

          <div class="col-12 col-md-6 mb-3">
            <label for="country" class="form-label">Country</label>
            <input class="form-control" type="text" name="listing[country]" placeholder="Enter Country" required />
            <div class="invalid-feedback">Please Enter Country</div>
          </div>
        </div>

        <!-- Description Field -->
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <input class="form-control" type="text" name="listing[description]" placeholder="Enter Description" required />
          <div class="invalid-feedback">Please Enter Description</div>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
          <button class="btn btn-dark add-btn mt-3 mb-3" type="submit">Add</button>
        </div>

      </form>
    </div>
  </div>
</div>
